<div class="d-flex justify-content-center">
    <form class="newPostForm" style="width: 50vw">
        <h2>Edit Post</h2>
        <div class="form-group">
            <input id="blogPostID" hidden="true" value="{{blogPost.id}}"></input>
            <input type="text" class="form-control" id="titleInput" placeholder="{{blogPost.title}}">
        </div>
        <div class="form-group">
            <textarea class="form-control" id="bodyInput" rows="5" style="width: 50vw" placeholder="{{blogPost.body_text}}"></textarea>
        </div>
        <button type="submit" class="btn btn-dark" id="editPostButton">Edit</button>
        <button type="submit" class="btn btn-dark" id="deletePostButton">Delete</button>
    </form>
</div>

<script src="/js/editPost.js"></script>