<div class="d-flex justify-content-center">
    <form class="newPostForm" style="width: 50vw">
        <h2>Edit Post</h2>
        <div class="form-group">
            <input id="blogPostID" hidden="true" value="{{blogPost.id}}"></input>
            <input class="form-control" id="titleInput" type="text" placeholder="{{blogPost.title}}" value="{{blogPost.title}}" disabled>
        </div>
        <div class="form-group">
            <textarea class="form-control" id="bodyInput" rows="5" style="width: 50vw">{{blogPost.body_text}}</textarea>
        </div>
        <button type="submit" class="btn btn-dark" id="editPostButton">Submit Change</button>
        <button type="submit" class="btn btn-dark" id="deletePostButton">Delete Post</button>
    </form>
</div>

<script src="/js/editPost.js"></script>