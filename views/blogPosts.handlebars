{{!-- The original blog post --}}
<div class="card w-75 text-light bg-dark mx-auto">
    <div class="card-header">
        {{blogPost.title}}
    </div>
    <input id="blogPostID" hidden="true" value="{{blogPost.id}}"></input>
    <div class="card-body">
        <blockquote class="blockquote mb-0">
            <p>{{blogPost.body_text}}</p>
            <footer class="blockquote-footer">Posted by {{blogPost.user.username}}, {{format_time blogPost.createdAt}}</footer>
        </blockquote>
    </div>
</div>

